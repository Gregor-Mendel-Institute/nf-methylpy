/*
 * ----------------------------------------------------------------------------
 *  Nextflow config file for use with Singularity on BINAC cluster in Tuebingen
 * ----------------------------------------------------------------------------
 * Defines basic usage limits and singularity image id.
 */

process {
  executor = 'pbs'
  queue = 'short'
  clusterOptions = { "-P $params.project " }
}

executor {
  $pbs {
    name = 'pbs'
    queueSize = 500
  }
}

params {
  max_memory = 250.GB
  max_cpus = 24
  max_time = 16.h
}
